      "timeout_s": 12,
      "reasoning_effort": ""
    },
    "nvidia": {
      "base_url": "https://integrate.api.nvidia.com/v1",
      "model": "moonshotai/kimi-k2-instruct",
      "api_key": "",
      "max_tokens": 8192,
      "rpm": 0,
      "timeout_s": 60,
      "max_retries": 3
    },
    "http": {
      "selected": "默认",
      "profiles": [
        {
          "name": "默认",
          "url": "https://siliconflow.zvo.cn/translate.json?to=chinese_simplified",
          "token": "",
          "timeout_s": 3
        }
      ]
